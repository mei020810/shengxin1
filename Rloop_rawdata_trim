conda activate study_rna
vim bw2_rloop.sh
#!/bin/bash
# 设置最大并发任务数
MAX_JOBS=2
current_jobs=0
INDEX_BASE="/data/mshe/rloopData/index/Gmax_508_v4.0.bw2"

echo "=== 开始Bowtie2比对分析 ==="
echo "开始时间: $(date)"
echo "索引: $INDEX_BASE"
echo "最大并发任务: $MAX_JOBS"

for r1_file in trimmed_results/*_R1_val_1.fq.gz; do
    # 提取样本名（去掉路径和_R1_val_1.fq.gz）
    sample=$(basename "$r1_file" _R1_val_1.fq.gz)
    
    # 检查对应的R2文件是否存在
    r2_file="trimmed_results/${sample}_R2_val_2.fq.gz"
    if [ ! -f "$r2_file" ]; then
        echo "警告: 找不到对应的R2文件 $r2_file，跳过"
        continue
    fi
    
    while [ $(jobs -r | wc -l) -ge $MAX_JOBS ]; do
        echo "等待空闲资源... 当前运行任务: $(jobs -r | wc -l)"
        sleep 60
    done
    echo "启动: $sample - $(date)"

nohup bowtie2 --end-to-end --no-discordant --no-mixed \
        -p 8 \
        -X 800 \
        -x "$INDEX_BASE" \
        -1 "$r1_file" \
        -2 "$r2_file" \
        -S "/data/mshe/rloopData/sam/${sample}_x800.bw2.sam" > "/data/mshe/rloopData/sam/${sample}_bw2.log" 2>&1 &

    current_jobs=$((current_jobs + 1))
    echo "进度: $current_jobs 个任务已提交"
    
    sleep 5
done 
echo "所有任务提交完成，等待最终完成..."
wait

echo "=== 最终统计结果 ==="

for log_file in /data/mshe/rloopData/sam/*_bw2.log; do
    if [ -f "$log_file" ]; then
        sample=$(basename "$log_file" _bw2.log)
        alignment_rate=$(grep "overall alignment rate" "$log_file" | awk '{print $1}' | tr -d '%')
        total_reads=$(grep "reads; of these:" "$log_file" | awk '{print $1}')
        
        if [ -n "$alignment_rate" ] && [ -n "$total_reads" ]; then
            echo "$sample | 总序列: $total_reads | 比对率: ${alignment_rate}%"
        else
            echo "$sample | 统计信息提取失败"
        fi
    fi
done | sort -t'|' -k5 -nr

echo "全部任务完成！时间: $(date)"

chmod u+x bw2_rloop.sh
nohup ./bw2_rloop.sh > "bw2_rloop.log" 2>&1 &    # tail -f bw2_rloop.log



# sam → bam
vim sam_to_bam_picard.sh
#!/bin/bash
MAX_JOBS=2
current_jobs=0
# 创建输出目录
mkdir -p /data/mshe/rloopData/bam
mkdir -p /data/mshe/rloopData/picard
mkdir -p /data/mshe/rloopData/logs

echo "=== 开始批量处理 SAM 文件 ==="
echo "开始时间: $(date)"

for sam_file in sam/*.bw2.sam; do
    # 等待资源
    while [ $(jobs -r | wc -l) -ge $MAX_JOBS ]; do
        echo "等待空闲资源... 当前运行任务: $(jobs -r | wc -l)"
        sleep 60
    done
    
    sample=$(basename "$sam_file" _x800.bw2.sam)
    echo "启动处理: $sample - $(date)"
    
    # 在子shell中运行整个处理流程
    nohup bash -c "
        echo '  - SAM转BAM并排序: $sample'
        samtools sort -@ 8 '$sam_file' -o '/data/mshe/rloopData/bam/${sample}_x800.sorted.bam'

        echo '  - 建立索引: $sample'
        samtools index '/data/mshe/rloopData/bam/${sample}_x800.sorted.bam'

        echo '  - Picard标记重复: $sample'
        picard MarkDuplicates \
            REMOVE_DUPLICATES=true \
            CREATE_INDEX=true \
            MAX_FILE_HANDLES=800 \
            VALIDATION_STRINGENCY=LENIENT \
            I='/data/mshe/rloopData/bam/${sample}_x800.sorted.bam' \
            O='/data/mshe/rloopData/picard/${sample}_picard.bam' \
            M='/data/mshe/rloopData/picard/${sample}_picard_metrics.txt'
        
        echo '  - 完成: $sample'
    " > "/data/mshe/rloopData/logs/${sample}_sam_bam_picard.log" 2>&1 &
    
    current_jobs=$((current_jobs + 1))
    echo "进度: $current_jobs 个任务已提交 - 样本: $sample"
    sleep 10
done 

echo "所有任务提交完成，等待最终完成..."
wait
echo "=== 全部任务完成！ ==="
echo "完成时间: $(date)"
echo "总处理样本数: $current_jobs"

chmod u+x sam_to_bam_picard.sh
nohup ./sam_to_bam_picard.sh > sam_to_bam_picard.log 2>&1 &

# 利用samtools分析比对率(去重前)
vim samtools_flagstat_analysis.sh
#!/bin/bash
mkdir -p /data/mshe/rloopData/alignment_stats
echo "=== 开始BAM文件统计分析 ==="
echo "开始时间: $(date)"
for bam_file in /data/mshe/rloopData/bam/*.sorted.bam; do
    sample=$(basename "$bam_file" _x800.sorted.bam)
    echo "=== 分析 $sample ==="
samtools flagstat "$bam_file" > "/data/mshe/rloopData/alignment_stats/${sample}_flagstat.txt"
# 提取关键信息
    total_reads=$(grep "in total" "/data/mshe/rloopData/alignment_stats/${sample}_flagstat.txt" | awk '{print $1}')
    mapped_rate=$(grep "mapped" "/data/mshe/rloopData/alignment_stats/${sample}_flagstat.txt" | awk '{print $5}' | head -1)
    properly_paired=$(grep "properly paired" "/data/mshe/rloopData/alignment_stats/${sample}_flagstat.txt" | awk '{print $6}')
    if [ -n "$total_reads" ] && [ -n "$mapped_rate" ]; then
        echo "$sample: 总reads=$total_reads, 比对率=$mapped_rate, 正确配对=$properly_paired"
    else
        echo "$sample: 统计信息提取失败"
    fi
done
echo "=== 分析完成 ==="
echo "结束时间: $(date)"

chmod u+x samtools_flagstat_analysis.sh
nohup ./samtools_flagstat_analysis.sh > samtools_flagstat_analysis.log  2>&1 &

# 利用samtools去重后查看比对率
vim samtools_flagstat_analysis_picard.sh
#!/bin/bash
mkdir -p /data/mshe/rloopData/picard/alignment_stats
echo "=== 开始BAM文件统计分析 ==="
echo "开始时间: $(date)"
for bam_file in /data/mshe/rloopData/picard/*_picard.bam; do
    sample=$(basename "$bam_file" _picard.bam)
    echo "=== 分析 $sample ==="
samtools flagstat "$bam_file" > "/data/mshe/rloopData/picard/alignment_stats/${sample}_flagstat_picard.txt"
# 提取关键信息
    total_reads=$(grep "in total" "/data/mshe/rloopData/picard/alignment_stats/${sample}_flagstat_picard.txt" | awk '{print $1}')
    mapped_rate=$(grep "mapped" "/data/mshe/rloopData/picard/alignment_stats/${sample}_flagstat_picard.txt" | awk '{print $5}' | head -1)
    properly_paired=$(grep "properly paired" "/data/mshe/rloopData/picard/alignment_stats/${sample}_flagstat_picard.txt" | awk '{print $6}')
    if [ -n "$total_reads" ] && [ -n "$mapped_rate" ]; then
        echo "$sample: 总reads=$total_reads, 比对率=$mapped_rate, 正确配对=$properly_paired"
    else
        echo "$sample: 统计信息提取失败"
    fi
done
echo "=== 分析完成 ==="
echo "结束时间: $(date)"

chmod u+x samtools_flagstat_analysis_picard.sh
nohup ./samtools_flagstat_analysis_picard.sh > samtools_flagstat_analysis_picard.log  2>&1 &

# 比较去重前后的比对率
echo "样本 | 去重前比对率 | 去重后比对率 | 总reads减少"
echo "------|-------------|-------------|------------"

for stats_file in /data/mshe/rloopData/picard/alignment_stats/*_flagstat_picard.txt; do
    sample=$(basename "$stats_file" _flagstat_picard.txt)
    
    # 去重后数据
    post_total=$(grep "in total" "$stats_file" | awk '{print $1}')
    post_mapped=$(grep "mapped" "$stats_file" | awk '{print $5}' | head -1)
    # 去重前数据
    pre_file="/data/mshe/rloopData/alignment_stats/${sample}_flagstat.txt"
    if [ -f "$pre_file" ]; then
        pre_total=$(grep "in total" "$pre_file" | awk '{print $1}')
        pre_mapped=$(grep "mapped" "$pre_file" | awk '{print $5}' | head -1)
        reduction=$(echo "scale=1; (1 - $post_total / $pre_total) * 100" | bc)
        echo "$sample | $pre_mapped | $post_mapped | ${reduction}%"
    else
        echo "$sample | - | $post_mapped | -"
    fi
done

# 用bw区分wR-loop和cR-loop,注意不要重复添加x800标记
vim strand_specific.sh

#!/bin/bash
mkdir -p /data/mshe/rloopData/strand_specific
echo "=== 开始链特异性筛选 ==="
echo "开始时间: $(date)"

for bam_path in /data/mshe/rloopData/picard/*_picard.bam; do
    sample=$(basename "$bam_path" _picard.bam)

        echo "开始处理: $sample"
        echo "BAM文件: $bam_path"
        
    echo "cRloop筛选..."
        samtools view -h "$bam_path" | \
        perl -anle 'print if (($F[1]==99)||($F[1]==147))' > "/data/mshe/rloopData/strand_specific/${sample}_x800_cRloop.sam"
#（防止表头被删）perl -anle 'print if (/^@/ || ($F[1]==99)||($F[1]==147))' > "/data/mshe/rloopData/strand_specific/${sample}_x800_cRloop.sam"
    
echo "wRloop筛选..."
        samtools view -h "$bam_path" | \
        perl -anle 'print if (($F[1]==83)||($F[1]==163))' > "/data/mshe/rloopData/strand_specific/${sample}_x800_wRloop.sam"
#perl -anle 'print if (/^@/ || ($F[1]==83)||($F[1]==163))' > "/data/mshe/rloopData/strand_specific/${sample}_x800_wRloop.sam"

        # 统计筛选结果
        cRloop_count=$(grep -c '^[^@]' "/data/mshe/rloopData/strand_specific/${sample}_x800_cRloop.sam")
        wRloop_count=$(grep -c '^[^@]' "/data/mshe/rloopData/strand_specific/${sample}_x800_wRloop.sam")
    echo "完成: $sample - cRloop: $cRloop_count reads, wRloop: $wRloop_count reads"
    echo "----------------------------------------"
done 
echo "全部任务完成！时间: $(date)"

chmod u+x strand_specific.sh
./strand_specific.sh

vim rename_files.sh
#!/bin/bash
echo "=== 安全批量重命名 ==="

# 1. Picard BAM文件
echo "--- 处理Picard BAM文件 ---"
for file in /data/mshe/rloopData/picard/*_picard.bam; do
    if [ -f "$file" ] && [[ "$file" != *"_x800_picard.bam" ]]; then
        new_file="${file/_picard.bam/_x800_picard.bam}"
        echo "$(basename "$file") -> $(basename "$new_file")"
        mv "$file" "$new_file"
    fi
done

# 2. cRloop文件
echo "--- 处理cRloop文件 ---"
for file in /data/mshe/rloopData/strand_specific/*_cRloop.sam; do
    if [ -f "$file" ] && [[ "$file" != *"_x800_cRloop.sam" ]]; then
        new_file="${file/_cRloop.sam/_x800_cRloop.sam}"
        echo "$(basename "$file") -> $(basename "$new_file")"
        mv "$file" "$new_file"
    fi
done

# 3. wRloop文件
echo "--- 处理wRloop文件 ---"
for file in /data/mshe/rloopData/strand_specific/*_wRloop.sam; do
    if [ -f "$file" ] && [[ "$file" != *"_x800_wRloop.sam" ]]; then
        new_file="${file/_wRloop.sam/_x800_wRloop.sam}"
        echo "$(basename "$file") -> $(basename "$new_file")"
        mv "$file" "$new_file"
    fi
done

echo "=== 重命名完成 ==="
chmod +x rename_files.sh
./rename_files.sh

#补全无表头的sam文件
for suffix in "_x800_cRloop.sam" "_x800_wRloop.sam"; do
    for sam_file in /data/mshe/rloopData/strand_specific/*${suffix}; do
        sample=$(basename "$sam_file" "${suffix}")
        raw_bam="/data/mshe/rloopData/picard/${sample}_x800_picard.bam"
        
        echo "文件: $(basename "$sam_file") -> 样本: $sample"
        
        if [ -f "$raw_bam" ]; then
            samtools view -H "$raw_bam" > header.tmp
            cat header.tmp "$sam_file" > "${sam_file}.tmp"
            mv "${sam_file}.tmp" "$sam_file"
            echo "已补全表头"
        else
            echo "找不到BAM: $raw_bam"
        fi
    done
done
# 删除临时文件
rm -f header.tmp

vim macs3_peak_calling.sh
#!/bin/bash
mkdir -p /data/mshe/rloopData/macs3_results_full
mkdir -p /data/mshe/rloopData/macs3_results_wRloop
mkdir -p /data/mshe/rloopData/macs3_results_cRloop

echo "=== 开始MACS3 Peak Calling ==="
echo "开始时间: $(date)"

# 1. 全数据peak calling
echo "1. 全数据peak calling..."
for bam_file in /data/mshe/rloopData/picard/*_x800_picard.bam; do
    sample=$(basename "$bam_file" _x800_picard.bam)
    # 检查是否已经运行过
    if [ -f "${output_prefix}_peaks.xls" ]; then
        echo "跳过已处理的样本：$sample"
        continue
    fi
    echo "处理样本：$sample"
    macs3 callpeak -t "$bam_file" \
    --extsize 200 -q 0.05 \
    --nomodel --SPMR -f BAM \
    -g 1e+9 -B \
    -n "/data/mshe/rloopData/macs3_results_full/${sample}_x800_bw2_nomodel.macs3"
done

echo "2. wRloop peak calling..."
for wRloop_file in /data/mshe/rloopData/strand_specific/*_x800_wRloop.sam; do
    sample=$(basename "$wRloop_file" _x800_wRloop.sam)
    # 检查是否已经运行过
    if [ -f "${output_prefix}_peaks.xls" ]; then
        echo "跳过已处理的样本：$sample"
        continue
    fi
    echo "处理样本：$sample"
    macs3 callpeak -t "$wRloop_file" \
    --extsize 200 -q 0.05 \
    --nomodel --SPMR -f SAM \
    -g 1e+9 -B \
    -n "/data/mshe/rloopData/macs3_results_wRloop/${sample}_x800_bw2_wRloop_nomodel.macs3"
done

echo "3. cRloop peak calling..."
for cRloop_file in /data/mshe/rloopData/strand_specific/*_x800_cRloop.sam; do
    sample=$(basename "$cRloop_file" _x800_cRloop.sam)
    # 检查是否已经运行过
    if [ -f "${output_prefix}_peaks.xls" ]; then
        echo "跳过已处理的样本：$sample"
        continue
    fi
    echo "处理样本：$sample"
    macs3 callpeak -t "$cRloop_file" \
    --extsize 200 -q 0.05 \
    --nomodel --SPMR -f SAM \
    -g 1e+9 -B \
    -n "/data/mshe/rloopData/macs3_results_cRloop/${sample}_x800_bw2_cRloop_nomodel.macs3"
done
echo "=== MACS3 Peak Calling 完成 ==="
echo "结束时间: $(date)"

chmod u+x macs3_peak_calling.sh
